<Page
    x:Class="Fcus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fcus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Width="35" Height="30" Background="Transparent" BorderThickness="0" Click="Button_Click">
                <Button.Content>
                    <Image Source="Assets/Fcus-icon.png" Width="15" Height="15"/>
                </Button.Content>
            </Button>

            <TextBlock x:Name="mdtitle" Text="untitled" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
        </Grid>
        <WebView x:Name="editor" Source="ms-appx-web:///index.html" Grid.Row="1"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#f5f5f5" Opacity="0.7" Grid.ColumnSpan="3"/>
            <Border BorderBrush="#f5f5f5" BorderThickness="1"  Margin="0,50,0,0" Grid.Column="1" CornerRadius="10">
                <WebView local:HTMLProperties.HtmlString="{Binding CurrentHtmlString}"/>
            </Border>
        </Grid>
    </Grid>
</Page>
