<Page
    x:Class="Fcus.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fcus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Width="35" Height="30" Background="Transparent" BorderThickness="0" Click="Button_Click">
                <Button.Content>
                    <Image Source="Assets/Fcus-icon.png" Width="15" Height="15"/>
                </Button.Content>
            </Button>
            
            <TextBlock x:Name="mdtitle" Text="untitled" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
        </Grid>
        <WebView x:Name="editor" Source="ms-appx-web:///index.html" Grid.Row="1"/>
        <Popup x:Name="amenu" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="200" Height="200" HorizontalOffset="0" VerticalOffset="0">
            <Border BorderBrush="Gray" Background="White" Opacity="0.7" BorderThickness="1" Width="200" Height="200">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <AppBarButton x:Name="openFileButton" Icon="OpenFile" 
                   Click="OpenButton_Click" ToolTipService.ToolTip="Open file" Width="auto"/>
                    <AppBarButton Icon="Save" Click="SaveButton_Click" 
                   ToolTipService.ToolTip="Save file" Width="auto" Grid.Column="1"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
    
</Page>
